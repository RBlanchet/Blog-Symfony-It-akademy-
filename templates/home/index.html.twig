{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="example-wrapper" style="text-align: center">
    {% for article in articles %}
        <article style="border: 1px solid black; border-radius: 25px; margin: 50px; background-color: white; box-shadow: 10px 10px 5px 12px rgba(0,0,0,0.75);">
            <h2>{{ article.titre }}</h2>
            <p>{{ article.contenu }}</p>
            {{ include('article/_delete_form.html.twig') }}
        </article>
    {% endfor %}
    <a href="{{ path('article_new') }}" style="padding: 5px; border: 2px solid black; color: red;">Ajouter un article</a>
</div>
{% endblock %}
